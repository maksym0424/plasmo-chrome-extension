{
  "exclude": ["node_modules"],
  "include": ["./**/*.ts", "./**/*.tsx"],
  "compilerOptions": {
    "paths": {
      "*": ["node_modules/*"]
    },

    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/",
    "jsx": "react",

    "lib": ["DOM", "ESNext"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
